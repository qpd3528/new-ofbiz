<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xmlns="http://ofbiz.apache.org/Widget-Form" xsi:schemaLocation="http://ofbiz.apache.org/Widget-Form http://ofbiz.apache.org/dtds/widget-form.xsd">

    <form name="LookupBusinessName" target="LookupBusinessName" type="single"
          header-row-style="header-row" default-table-style="basic-table">
        <!--<auto-fields-entity entity-name="PartyNameView" default-field-type="find"/>-->
        <field name="businessId" title="${uiLabelMap.BusinessBusinessId}"><text-find/></field>
        <field name="businessName" title="${uiLabelMap.name}"><text-find/></field>
        <field name="noConditionFind"><hidden value="Y"/><!-- if this isn't there then with all fields empty no query will be done --></field>
        <field name="submitButton" title="${uiLabelMap.CommonFind}"><submit button-type="button"/></field>
    </form>

    <form name="ListLookupBusinessName" type="list" list-name="listIt" paginate-target="LookupBusinessName"
          odd-row-style="alternate-row" default-table-style="basic-table hover-bar">
        <actions>
            <set field="inputFields" from-field="parameters"/>
            <set field="orderBy" value="businessId"/>
            <set field="entityName" value="Business"/>
            <script location="component://business/src/main/groovy/org/apache/ofbiz/business/FindLookUp.groovy"/>
        </actions>
        <field name="businessId" title="${uiLabelMap.businessId}"  widget-style="smallSubmit">
            <hyperlink description="${businessId}" target="javascript:set_value('${businessId}')" also-hidden="false" target-type="plain"/>
        </field>
        <field name="businessName" title="${uiLabelMap.businessName}"><display/></field>
        <field name="majorId" title="${uiLabelMap.majorId}"><display/></field>
    </form>

</forms>
